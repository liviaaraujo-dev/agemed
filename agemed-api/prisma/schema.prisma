generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name String
  phoneNumber String
  street       String
  neighborhood String
  city         String
  uf String
  postalCode   String
  numberAddress Int
  doctors       Doctor[] 
}

model Doctor{
  id       String @id @default(uuid())
  name String
  specialties String[]
  crm String
  user        User     @relation(fields: [userId], references: [id])
  userId      String
}

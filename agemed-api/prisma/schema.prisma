generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name String
  phoneNumber String
  street       String
  neighborhood String
  city         String
  uf String
  postalCode   String
  numberAddress Int
  doctors       Doctor[] 
  patients       Patient[] 
}

model Doctor{
  id       String @id @default(uuid())
  name String
  specialties String[]
  phone String
  crm String
  user        User     @relation(fields: [userId], references: [id])
  userId      String
}

model Patient{
  id String @id @default(uuid())
  name String
  cpf String
  email String
  phone String
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}
